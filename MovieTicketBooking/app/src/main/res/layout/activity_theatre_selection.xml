<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/movieNameTheatre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textColor="@color/colorRedishPink"
            android:textStyle="bold"
           android:layout_toLeftOf="@+id/tomoDate_btn"
            android:layout_margin="22dp" />

        <Button
            android:id="@+id/tomoDate_btn"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/ic_box"
            android:text="31-JAN-2018"
            android:textSize="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:layout_alignTop="@+id/movieDescriptionView" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/TheatreListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>
</LinearLayout>
